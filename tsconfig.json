{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "sourceMap": false,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "target": "ES2022",
    "module": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
    "env"
  ],
  "exclude": [
    "**/**/node_modules",
    "node_modules",
    "dist",
    "db",
    "env"
  ]
}